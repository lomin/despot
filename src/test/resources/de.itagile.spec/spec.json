{
  "endpoints": [
    {
      "uri": "/items/{path}",
      "methods": [
        {
          "method": "GET",
          "responses": [
            {
              "status_code": 200,
              "mediatype": "application/vnd.itagile.product+json"
            },
            {
              "status_code": 301
            },
            {
              "status_code": 404,
              "mediatype": "application/vnd.itagile.error+json"
            }
          ]
        }
      ]
    },
    {
      "uri": "/NOT_ALLOWED",
      "methods": [
        {
          "method": "GET",
          "responses": [
            {
              "status_code": 405,
              "mediatype": "application/vnd.itagile.error+json"
            }
          ]
        }
      ]
    }
  ],
  "media_types": [
    {
      "name": "application/vnd.itagile.product+json",
      "fields": [
        "productId",
        "name",
        "variations"
      ]
    },
    {
      "name": "application/vnd.itagile.variation+json",
      "fields": [
        "variationId",
        "availability",
        "price"
      ]
    },
    {
      "name": "application/vnd.itagile.error+json",
      "fields": ["reason"]
    }
  ],
  "fields": [
    {
      "name": "reason",
      "type": {
        "name": "String"
      }
    },
    {
      "name": "productId",
      "type": {
        "name": "String",
        "required": true
      }
    },
    {
      "name": "name",
      "type": {
        "name": "String"
      }
    },
    {
      "name": "variationId",
      "type": {
        "name": "String",
        "required": true
      }
    },
    {
      "name": "availability",
      "type": {
        "name": "Enum",
        "subtype": "String",
        "values": [
          "AVAILABLE",
          "DELAYED",
          "SOLDOUT"
        ],
        "default": "AVAILABLE"
      }
    },
    {
      "name": "price",
      "type": {
        "name": "Integer"
      }
    },
    {
      "name": "variations",
      "type": {
        "name": "MediaTypeSet",
        "mediatype": "application/vnd.itagile.variation+json"
      }
    }
  ]
}