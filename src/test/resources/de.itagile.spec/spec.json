{
  "endpoints": [
    {
      "uri": "/items/{path}",
      "methods": [
        {
          "__description__": "Description for /items/{path}",
          "method": "GET",
          "consumes": "application/x-www-form-urlencoded",
          "responses": [
            {
              "status-code": 200,
              "produces": "application/vnd.itagile.product+json",
              "__description__": "Returns a single product."
            },
            {
              "status-code": 301,
              "__description__": "Uncached Redirect."
            },
            {
              "status-code": 301,
              "location": "{base}/items/{path}",
              "max-age": {
                "duration": 5,
                "time-unit": "SECONDS"
              }
            },
            {
              "status-code": 404,
              "produces": "application/vnd.itagile.error+json"
            },
            {
              "status-code": 503,
              "__description__": "If the redirect cannot be performed."
            }

          ]
        }
      ]
    },
    {
      "uri": "/NOT_ALLOWED",
      "methods": [
        {
          "method": "GET",
          "responses": [
            {
              "status_code": 405,
              "produces": "application/vnd.itagile.error+json"
            }
          ]
        }
      ]
    }
  ],
  "mediatypes": [
    {
      "name": "application/vnd.itagile.product+json",
      "fields": [
        "productId",
        "name",
        "variations"
      ]
    },
    {
      "name": "application/vnd.itagile.variation+json",
      "fields": [
        "variationId",
        "availability",
        "price"
      ]
    },
    {
      "name": "application/vnd.itagile.error+json",
      "fields": [
        {
          "name": "reason",
          "type": {
            "name": "String"
          }
        }
      ]
    }
  ],
  "fields": [
    {
      "name": "productId",
      "type": {
        "name": "String",
        "required": true
      }
    },
    {
      "name": "name",
      "type": {
        "name": "String"
      }
    },
    {
      "name": "variationId",
      "type": {
        "name": "String",
        "required": true
      }
    },
    {
      "name": "availability",
      "type": {
        "name": "Enum",
        "subtype": "String",
        "values": [
          "AVAILABLE",
          "DELAYED",
          "SOLDOUT"
        ],
        "default": "AVAILABLE"
      }
    },
    {
      "name": "price",
      "type": {
        "name": "Integer"
      }
    },
    {
      "name": "variations",
      "type": {
        "name": "MediaTypeSet",
        "mediatype": "application/vnd.itagile.variation+json"
      }
    }
  ]
}